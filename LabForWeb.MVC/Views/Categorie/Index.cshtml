@using LabForWeb.MVC.Models
@model List<CategoriaModel>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Elenco delle Categorie</h1>
<a class="btn btn-primary" asp-action="Create">Inserisci nuova categoria</a>
<br />
<hr />

@if (Model.Count == 0)
{
    <p>Il DA non contiene attualmente Categorie </p>
}
else
{
    <ul class="list-group">
        @foreach (var cat in Model)
        {
            <li class="list-group-item">@cat.Nome</li>
        }
    </ul>
}


